@model ArdenHotel.Entities.Room

@{
    ViewData["Title"] = "InsertRoom";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}

<h1>InsertRoom</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/SysAdmin/AdminRoom/InsertRoom" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label">Oda Adı</label>
                <input name="RoomName" asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input name="Description" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Fiyat</label>
                <input name="Price" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Kapasite</label>
                <input name="Capacity" asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Tip</label>
                <input name="Type" asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Resim</label>
                <input type="file" multiple name="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Kategori</label>
                @Html.DropDownListFor(x => x.CategoryID, new SelectList((System.Collections.IEnumerable)ViewData["items"], "Value", "Text"), new { @class = "form-control" })
                <input type="hidden" asp-for="CategoryID" />

            </div>
            <div class="form-group">
                <label asp-for="RoomCount" class="control-label">Adet</label>
                <input asp-for="RoomCount" class="form-control" />
                <span asp-validation-for="RoomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>