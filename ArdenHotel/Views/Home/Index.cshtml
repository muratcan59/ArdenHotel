<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">@SharedLocalizer["Odalar"]</h2>
        </div>
        <div class="row mb_30">
            @foreach (var item in categories)
            {
                var pic = item.CategoryDescription == "Double Oda" ? "doubledeniz-min.jpg"
                        : (item.CategoryDescription == "Triple Oda" ? "triple-min.jpg"
                        : (item.CategoryDescription == "Aile Odası" ? "aile-min.jpg"
                        : (item.CategoryDescription == "Standart Oda" ? "standart-min.jpg"
                        : (item.CategoryDescription == "Aile Deniz Manzaralı" ? "aile-deniz-manzarali-min.jpg" : ""))));
                <div class="col-lg-4 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            <img style="width: 350px; height: auto;" src="/Files/@pic" alt="">
                        </div>
                        <a href="~/rooms?catId=@item.CategoryID"><h4 class="sec_h4">@SharedLocalizer[item.CategoryName]</h4></a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
